#!/usr/bin/env bash
#?
# git-container - Run Git container
#
# USAGE
#	git-container
#
# BEHAVIOR
# 	Runs the Git Docker container with the working directory shared 
#	between the guest and host.
if [ -z "$TAG" ]; then
	TAG="noahhuppert/git-container:latest"
fi

docker run \
	-it \
	--rm \
	-v "$PWD:/root/shared" \
	"$TAG"
